@using AQ.Kelloggs.Resources
@{
    ViewBag.Title = @Resources.CorrespondenceMaps;
    Layout = "~/Views/Shared/Master.cshtml";
}
<meta content="utf-8" http-equiv="encoding">
<script>
    document.write('<script src="../Scripts/AdvancedAnalytics/CorrespondenceMap.js?version=' + version + '" type="text/javascript"></scr' + 'ipt>');
    document.write('<link href="../Content/Shared/LeftPanel.css?version=' + version + '" rel="stylesheet" type="text/css" />');
    document.write('<link href="../Content/CrossTab/CrossTab.css?version=' + version + '" rel="stylesheet" type="text/css" />');
    document.write('<link href="../Content/CrossTab/_chart.css?version=' + version + '" rel="stylesheet" type="text/css" />');
    document.write('<link href="../Content/AdvancedAnalytics/Osp.css?version=' + version + '" rel="stylesheet" type="text/css" />');
    document.write('<link href="../Content/AdvancedAnalytics/CorrespondenceMap.css?version=' + version + '" rel="stylesheet" type="text/css" />');
</script>

@using AQ.Kelloggs.Resources
<div class="view-container" ng-controller="CorrespondenceMap-Controller">
    <div>
        <div class="calloutArrow"></div>
        <div class="selectionButtonCallout">Click here to make selections</div>
    </div>

    <div class="leftpanelarea" ng-hide="leftMenuIsHidden"></div>
    @*bind left panel from partial start*@
    <div class="left-panel-load animate-hide" ng-hide="leftMenuIsHidden">
        @{Html.RenderPartial("LeftPanel");}
    </div>
    @*bind left panel from partial view end*@

    @*bind content start*@

    <div class="view-load" ng-click="hideLeftPanel()">
        <div class="output-container">
            <div class="OSPHeader headerArea">
                <div class="headerLeftBorder"></div>
                <div class="headerText"><div class="middleAlign">Correspondence Maps</div></div>
                <div class="legend">
                    <div class="dim1 middleAlign">
                        <div class="outer-circle"></div>
                        <div class="legendColor"></div>
                        <div class="whiteColor"></div>
                        <div class="legendName">{{Dimension1}}</div>
                    </div>
                    <div class="dim2 middleAlign">
                        <div class="outer-circle" style="border: 0.08vw solid #C00000;"></div>
                        <div class="legendColor" style="background-color:#C00000"></div>
                        <div class="whiteColor"></div>
                        <div class="legendName">{{Dimension2}}</div>
                    </div>
                    <div></div>
                </div>
            </div>
            <div class="noOutput">
                <div class="middleAlign">
                    <span>
                        Output cannot be displayed
                    </span>
                    <br /><br />
                    The Selected Variables from Dimension 1 and Dimension 2 do not show dependence on each other @@ 95% Confidence Level.
                </div>
            </div>
            <div id="chart-container"></div>

        </div>
    </div>
    @*bind content end*@


</div>


